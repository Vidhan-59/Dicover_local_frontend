.cardCarousel {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 500px; /* Adjust height as needed */
  background-color: rgb(218, 248, 248); /* Background color */
}

.cardContainer {
  display: flex;
  position: relative;
  width: 100%;
  height: 100%;
}

.card1 {
  margin-top: 40px;
  width: 30%; /* Decreased width of cards */
  height: 90%;
  background-size: cover;
  background-position: center;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.5; /* Semi-transparent */
  transition: opacity 0.5s ease, transform 0.5s ease;
  filter: brightness(50%); /* Dark overlay effect */
  margin-left: 35%;
  border-radius: 20px;
}

.card1.active {
  opacity: 1;
  transform: scale(1.05); /* Slight zoom for active card */
  z-index: 1;
  filter: brightness(100%); /* Remove dark overlay for active card */
}

.cardDetails {
  position: absolute;
  bottom: 20px;
  left: 20px; /* Title on the bottom left */
  color: white;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  width: calc(100% - 40px); /* Adjust width for padding */
}

.cardTitle {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.viewMoreBtn {
  /* padding: 10px; */
  padding-left: 20px;
  padding-right: 20px;
  border: 2px solid white;
  background-color: transparent;
  color: white;
  font-weight: bold;
  cursor: pointer;
  border-radius: 20px;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.viewMoreBtn:hover {
  background-color: white;
  color: black;
}

/* Make the carousel responsive */
@media (max-width: 768px) {
  .cardTitle {
    font-size: 18px;
  }

  .viewMoreBtn {
    padding: 8px 16px;
    font-size: 14px;
  }
}
import React, { useState, useEffect } from 'react';
import './RollingCards.css'; // Ensure this CSS file is created and correctly referenced

const RollingCards = () => {
  const cards = [
    { id: 1, src: "https://i0.wp.com/picjumbo.com/wp-content/uploads/magical-spring-forest-scenery-during-morning-breeze-free-photo.jpg?w=600&quality=80", title: "Magical Spring Forest" },
    { id: 2, src: "1.jpg", title: "Misty Mountains" },
    { id: 3, src: "2.jpg", title: "Autumn Forest" },
    { id: 4, src: "3.jpg", title: "Snowy Mountains" }
  ];

  const [currentIndex, setCurrentIndex] = useState(0);

  useEffect(() => {
    const interval = setInterval(() => {
      setCurrentIndex((prevIndex) => (prevIndex + 1) % cards.length);
    }, 3000); // Change card every 1 second
    return () => clearInterval(interval);
  }, [cards.length]);

  return (
    <div className="cardCarousel">
      <div className="cardContainer">
        {cards.map((card, index) => (
          <div
            key={card.id}
            className={`card1 ${index === currentIndex ? 'active' : ''}`}
            style={{ backgroundImage: `url(${card.src})` }}
            aria-label={card.title}
          >
            <div className="cardDetails">
              <h2 className="cardTitle">{card.title}</h2>
              <button className="viewMoreBtn">View More</button>
            </div>
          </div>
        ))}
      </div>
    </div>
  );
};

export default RollingCards;
